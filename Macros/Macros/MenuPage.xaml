        <ContentPage BackgroundColor="#25232e" Title="Menu">
            
                <!--<StackLayout Margin="0">
                    --><!--<Label Text="Macros" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" TextColor="#fafafa"></Label>--><!--

                    <Image x:Name="MenuBannerImage" Source="Banner.png" HeightRequest="100" Aspect="AspectFill"></Image>

                    <Button Text="Home" BackgroundColor="Transparent" Clicked="HomePage_Clicked" TextColor="#fafafa"></Button>
                    
                    <Button Text="Calculate" BackgroundColor="Transparent" BorderColor="Transparent" Clicked="Calculate_Clicked" TextColor="#fafafa"></Button>

                    --><!--<Button Text="BMR" BackgroundColor="Transparent" BorderColor="Transparent" Clicked="Handle_Clicked" TextColor="#fafafa"></Button>--><!--

                    <Button Text="Data" BackgroundColor="Transparent" Clicked="DBPage_Clicked" TextColor="#fafafa"></Button>

