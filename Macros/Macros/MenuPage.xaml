                </StackLayout>-->

                <StackLayout Orientation="Vertical">

                    <!-- 
             This StackLayout you can use for other
             data that you want to have in your menu drawer
        -->
                <StackLayout>
                        <!--<Label Text="{Binding Header}" />-->

                    <Image Source="{Binding Image}"  HeightRequest="100" Aspect="AspectFill"/>

                    <Label Text="{Binding Footer}" TextColor="White" Margin="20,5,5,5" FontFamily="TitilliumWeb-Regular.ttf#TitilliumWeb-Regular" />
                    </StackLayout>
                    
                    <ListView x:Name="navigationDrawerList"
                  RowHeight="55"
                  SeparatorVisibility="Default" 
                  SeparatorColor="#6f5383" 
                  ItemSelected="OnMenuItemSelected">

                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <ViewCell>

                                    <!-- Main design for our menu items -->
                                <StackLayout VerticalOptions="FillAndExpand"
                             Orientation="Horizontal"
                             Padding="20,10,0,10"
                             Spacing="20" BackgroundColor="#25232e">

                                    <Image Source="{Binding Icon}"
                                         WidthRequest="40"
                                         HeightRequest="40"
                                         VerticalOptions="Start" />

                                    <Label Text="{Binding Title}"
                                         FontSize="Small"
                                         VerticalOptions="Center"
                                         TextColor="White"
                                         FontFamily="TitilliumWeb-Regular.ttf#TitilliumWeb-Regular"
                                    />        
                                </StackLayout>
                                </ViewCell>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                <Label x:Name="versionLabel" Margin="20" TextColor="#696676" XAlign="Center" FontFamily="TitilliumWeb-Regular.ttf#TitilliumWeb-Regular" />
            </StackLayout>

            
            
        </ContentPage>
    <!--<pages:MenuPageMaster x:Name="MasterPage" />-->
  </MasterDetailPage.Master>
  <MasterDetailPage.Detail>
        <NavigationPage>

        </NavigationPage>
